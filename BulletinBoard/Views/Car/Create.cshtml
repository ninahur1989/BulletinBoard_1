@using BulletinBoard.Data.ViewModels
@using BulletinBoard.Data.Enums

@model CarAttributeVM
@{
    ViewData["Title"] = "Create a new Post";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new Car</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div>
                    <span>Categriy: @Categories.Car</span>
                    <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Post" asp-action="ChooseAttribute">Change Category</a>
                </div>

                <form asp-action="AddNewCar" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Post.Titile" class="control-label"></label>
                                <input asp-for="Post.Titile" class="form-control" />
                                <span asp-validation-for="Post.Titile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Post.Price" class="control-label"></label>
                                <input asp-for="Post.Price" type="number" class="form-control" />
                                <span asp-validation-for="Post.Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Post.Description" class="control-label"></label>
                                <textarea asp-for="Post.Description" class="form-control"></textarea>
                                <span asp-validation-for="Post.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="GraduationYear" class="control-label"></label>
                                <input asp-for="GraduationYear" type="number" class="form-control" />
                                <span asp-validation-for="GraduationYear" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MileagesCar" class="control-label"></label>
                                <input asp-for="MileagesCar" type="number" class="form-control" />
                                <span asp-validation-for="MileagesCar" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="VINNumber" class="control-label"></label>
                                <input asp-for="VINNumber" type="number" class="form-control" />
                                <span asp-validation-for="VINNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="image-preview-container">
                        <div class="preview">
                            <img id="preview-selected-image" />
                        </div>
                        <label for="file-upload">Upload Image</label>
                        <input type="file" id="file-upload" accept="image/*" onchange="previewImage(event);" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

