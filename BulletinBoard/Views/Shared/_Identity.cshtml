@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i></i> My account
    </a>
}
else
{
    <div class="dropdown">
        <button class="btn btn-outline-success my-2 my-sm-0">My account</button>
        <div class="dropdown-content">
            <a asp-controller="Account" asp-action="Getposts">
                <i class="bi bi-list"></i> My posts
            </a>
            <a asp-controller="Account" asp-action="Orders">
                <i class="bi bi-list"></i> My Orders
            </a>
            <a asp-controller="Account" asp-action="Logout">
                 <i class="bi bi-list"></i> Logout
            </a>
            <a asp-controller="Home" asp-action="Notification">
                <i class="bi bi-list"></i> Notification
            </a>
            <a asp-controller="Home" asp-action="Chat">
                <i class="bi bi-list"></i> Anonymous chat with out community members
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                    <i class="bi bi-people"></i> Users
                </a>
            }
        </div>
    </div>
}

